
#test compiler

if 
mipsel-linux-gcc -v >/dev/null
then
  echo "Use compiler mipsel-linux for building"
else
  echo "Not found compiler mipsel-linux-gcc"
  exit 1
fi


#build libmad
export CC="mipsel-linux-gcc -mips32"
export CFLAGS="-O4"
echo "++++ build libmad +++"
cd madlib/libmad-0.15.1b
./configure  --host=x86-redhat-linux --build=i386-redhat-linux --target=mipsel-linux --enable-fpm=mips  --disable-shared
make
unset CC CFLAGS
cd -

#build mplayer
BLDDIR=`pwd`
echo "++++ build mplayer +++"
./configure --host-cc=gcc --cc="mipsel-linux-gcc -mips32" --target=mips-linux --enable-cross-compile  --enable-fbdev --enable-ossaudio --disable-esd --enable-faad-fixed --disable-ivtv --disable-sdl --disable-mp3lib --enable-mad --enable-gui --enable-bitmap-font --enable-freetype --enable-fontconfig --enable-menu --enable-sortsub --disable-dvdread-internal --enable-libvorbis --with-extraincdir=$BLDDIR/madlib/libmad-0.15.1b --with-extralibdir=$BLDDIR/madlib/libmad-0.15.1b/.libs
sed -e 's/CONFIG_WMAV1_DECODER/CONFIG_FIXWMAV1_DECODER/g'  \
    -e 's/CONFIG_WMAV2_DECODER/CONFIG_FIXWMAV2_DECODER/g' config.mak > t.mak
rm -f config.mak
mv t.mak config.mak
make

